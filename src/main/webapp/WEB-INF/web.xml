<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">

  <display-name>hanmatsu</display-name>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Member Controller Mapping -->
  <servlet>
    <servlet-name>MemberController</servlet-name>
    <servlet-class>controller.MemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberController</servlet-name>
    <url-pattern>/member/*</url-pattern>
  </servlet-mapping>

  <!-- Board Controller Mapping -->
  <servlet>
    <servlet-name>BoardController</servlet-name>
    <servlet-class>controller.BoardController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BoardController</servlet-name>
    <url-pattern>/board/*</url-pattern>
  </servlet-mapping>

  <!-- Festival Controller Mapping -->
  <servlet>
    <servlet-name>FestivalController</servlet-name>
    <servlet-class>controller.FestivalController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FestivalController</servlet-name>
    <url-pattern>/festival/*</url-pattern>
  </servlet-mapping>

  <!-- Main Controller Mapping -->
  <servlet>
    <servlet-name>IndexController</servlet-name>
    <servlet-class>controller.IndexController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexController</servlet-name>
    <url-pattern>/main.do</url-pattern>
  </servlet-mapping>

  <!-- Info Controller Mapping -->
  <servlet>
    <servlet-name>InfoController</servlet-name>
    <servlet-class>controller.InfoController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InfoController</servlet-name>
    <url-pattern>/info/*</url-pattern>
  </servlet-mapping>

  <!-- File Display Mapping -->
  <servlet>
    <servlet-name>FileDisplayController</servlet-name>
    <servlet-class>controller.FileDisplayController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileDisplayController</servlet-name>
    <url-pattern>/display.do</url-pattern>
  </servlet-mapping>

  <!-- News Controller Mapping -->
  <servlet>
    <servlet-name>NewsController</servlet-name>
    <servlet-class>controller.NewsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewsController</servlet-name>
    <url-pattern>/news/list.do</url-pattern>
  </servlet-mapping>

  <!-- Admin News Controller Mapping -->
  <servlet>
    <servlet-name>AdminNewsController</servlet-name>
    <servlet-class>controller.AdminNewsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminNewsController</servlet-name>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>

</web-app>